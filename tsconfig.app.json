{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "*.d.ts",
        "src/**/*.ts",
        "src/**/*.vue",
        "src/**/**/*.ts",
        "src/**/**/*.vue",
        "src/**/**/**/*.vue",
        "src/*.ts",
        "src/*.vue",
        "src/**/*.d.ts"
    ],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "allowImportingTsExtensions": true
}
